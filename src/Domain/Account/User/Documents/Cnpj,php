<?php
namespace App\Domain\Account\Documents;
use App\Domain\ValidationList;
use App\Domain\Account\Documents\IDocument;
use App\Domain\Account\ValidationsRules\DocumentValidationRules;
use App\Domain\Account\ValidationsRules\IDocumentValidationRules;
use App\Domain\IValidationRules;

class Cnpj implements IDocument 
{
    private string $number;
    private string $type = 'CNPJ';
    private string $country = 'BR';
    private DocumentValidationRules $validationRules;

    public function __construct($number, DocumentValidationRules $validationRules)
    {
        $this->number = $number;
        $this->validationRules = $validationRules;
    }
    
    public function number(): string
    {
        return $this->number;
    }

    public function country(): string
    {
        return $this->country;
    }

    public function type(): string
    {
        return $this->type;
    }

    public function validationRules(IValidationRules $documentValidationRules): ValidationList 
    {
        return $documentValidationRules->allRules();
    }
}